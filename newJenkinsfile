pipeline {
    agent any

    options {
        timestamps()
        buildDiscarder(logRotator(numToKeepStr: '10'))
        timeout(time: 4, unit: 'HOURS')
    }

    parameters {
        string(
            name: 'GIT_BASE_URL', 
            defaultValue: 'https://github.com/JustTalhaRehman/', 
            description: 'Base HTTPS URL for all repositories'
        )
    }

    stages {

        stage('Load Configuration') {
            steps {
                script {
                    def reposConfig = load 'repos-config.groovy'
                    echo "Loaded ${reposConfig.size()} repositories from config"
                }
            }
        }

        stage('Clone & Build Repositories') {
            steps {
                script {
                    def reposConfig = load 'repos-config.groovy'

                    reposConfig.each { repo ->
                        def branch = repo.defaultTag
                        def workspaceDir = "workspace/${repo.name}"

                        // Sanitize branch for Docker tag (replace / or other invalid characters)
                        def safeBranch = branch.replaceAll('[^a-zA-Z0-9_.-]', '-')

                        echo "Cloning repository '${repo.name}' branch: '${branch}' into ${workspaceDir}"

                        dir(workspaceDir) {
                            deleteDir() // clean workspace

                            // Clone repo safely with credentials
                            withCredentials([usernamePassword(
                                credentialsId: 'GITHUB_CREDENTIALS',
                                usernameVariable: 'GIT_USER',
                                passwordVariable: 'GIT_PAT'
                            )]) {
                                // Use array style to avoid insecure interpolation warning
                                sh([
                                    'bash', '-c', 
                                    "git clone --branch ${branch} https://${GIT_USER}:${GIT_PAT}@github.com/JustTalhaRehman/${repo.name}.git ."
                                ])
                            }

                            // Replace !tag in build command with safe branch
                            def buildCommand = repo.buildCmd.replace('!tag', safeBranch)
                            echo "Running build command: ${buildCommand}"
                            sh buildCommand
                        }
                    }
                }
            }
        }
    }
}
